{
  "name": "@takwimu/dashboard",
  "version": "1.0.0",
  "repository": "git@github.com:TakwimuAfrica/Dashboard.git",
  "scripts": {
    "build:hurumap-ui": "cd wp-content/plugins/hurumap-ui && yarn --frozen-lockfile && yarn build",
    "build:hurumap-data": "cd wp-content/plugins/hurumap-data && yarn --frozen-lockfile && yarn build",
    "pack:dashboard": "rm -rf ./package && yarn pack --filename /tmp/takwimu-dashboard.tar && tar xopf /tmp/takwimu-dashboard.tar",
    "build": "yarn build:hurumap-data && build:hurumap-ui",
    "deploy:dev": "sh scripts/deploy.sh",
    "deploy:prod": "ENV=prod sh scripts/deploy.sh"
  }
}

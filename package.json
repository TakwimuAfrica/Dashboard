{
  "name": "@takwimu/dashboard",
  "version": "1.0.0",
  "repository": "git@github.com:TakwimuAfrica/Dashboard.git",
  "scripts": {
    "build:hurumap-ui": "cd wp-content/plugins/hurumap-ui && yarn build",
    "build:hurumap-data": "cd wp-content/plugins/hurumap-data && yarn build",
    "build:dashboard": "rm -rf ./package && yarn pack --filename /tmp/takwimu-dashboard.tar && tar xopf /tmp/takwimu-dashboard.tar",
    "build": "yarn build:hurumap-data && build:hurumap-ui && yarn build:dashboard",
    "subtree:add": "git subtree add --prefix package \"$REMOTE\" master --squash",
    "subtree:push": "git subtree push --prefix package \"$REMOTE\" master",
    "commit:dashboard": "git add package && git commit -m 'dashboard $npm_package_version'",
    "deploy:dev": "REMOTE=git@git.wpengine.com:production/takwimutech.git yarn version --prerelease --preid rc",
    "deploy:prod": "REMOTE=git@git.wpengine.com:production/takwimu.git yarn version",
    "postversion": "yarn subtree:add && yarn build && yarn commit:dashboard && yarn subtree:push && echo \"Successfully released version $npm_package_version!\""
  }
}

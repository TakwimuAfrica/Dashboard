{
  "name": "@codeforafrica/hurumap-wp-plugin",
  "version": "0.1.0",
  "main": "build/index.js",
  "license": "GPL-3.0-or-later",
  "devDependencies": {
    "@babel/core": "^7.6.4",
    "@babel/preset-env": "^7.6.3",
    "@babel/preset-react": "^7.0.0",
    "@wordpress/scripts": "^5.0.0",
    "babel-eslint": "^10.0.3",
    "babel-loader": "^8.0.6",
    "css-loader": "^3.2.0",
    "eslint": "^6.3.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.1.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-json": "^1.4.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-markdown": "^1.0.0",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-react-hooks": "^1.7.0",
    "husky": "^3.0.4",
    "lint-staged": "^9.4.0",
    "prettier": "^1.18.2",
    "url-loader": "^2.1.0",
    "webpack": "^4.41.0",
    "webpack-cli": "^3.3.9"
  },
  "scripts": {
    "lint": "yarn eslint --fix  './src'",
    "start": "concurrently \"yarn start:definitions\" \"yarn start:sections\"  \"yarn start:blocks\"",
    "start:blocks": "wp-scripts start ./src/FlourishBlock/index.js ./src/HURUmapBlock/index.js ./src/FeaturedData/index.js ./src/CardBlock/index.js --output-path=build/blocks",
    "start:definitions": "wp-scripts start ./src/ChartDefinition/index.js --output-path=build/definitions",
    "start:sections": "wp-scripts start ./src/ChartsSection/index.js --output-path=build/sections",
    "build": "yarn build:definitions && yarn build:sections && yarn build:blocks && yarn build:micro-frontend",
    "build:definitions": "wp-scripts build ./src/ChartDefinition/index.js --output-path=build/definition",
    "build:sections": "wp-scripts build ./src/ChartsSection/index.js --output-path=build/section",
    "build:blocks": "wp-scripts build ./src/FlourishBlock/index.js ./src/HURUmapBlock/index.js ./src/FeaturedData/index.js ./src/CardBlock/index.js --output-path=build/blocks",
    "build:micro-frontend": "wp-scripts build ./src/micro-frontend/hurumap-ui-blocks.js -o ../../themes/hurumap/micro-frontend/build/hurumap-ui-blocks.js --config webpack.micro-frontend.config.js"
  },
  "dependencies": {
    "@apollo/react-hooks": "^3.1.1",
    "@codeforafrica/hurumap-ui": "^0.2.0-alpha.26",
    "@material-ui/core": "^4.5.1",
    "@material-ui/icons": "^4.5.1",
    "@reach/router": "^1.2.1",
    "@types/react": "^16.9.11",
    "@wordpress/block-editor": "^3.5.0",
    "@wordpress/blocks": "^6.7.0",
    "@wordpress/components": "^8.3.2",
    "@wordpress/data": "^4.9.2",
    "@wordpress/editor": "^9.7.0",
    "@wordpress/element": "^2.8.0",
    "@wordpress/i18n": "^3.6.0",
    "apollo-boost": "^0.4.4",
    "apollo-client": "^2.6.4",
    "apollo-utilities": "^1.3.2",
    "classnames": "^2.2.6",
    "formik": "^1.5.8",
    "graphql": "^14.5.8",
    "graphql-tag": "^2.10.1",
    "lodash": "^4.17.15",
    "pluralize": "^8.0.0",
    "prop-types": "^15.7.2",
    "react": "^16.10.1",
    "react-ace": "^7.0.4",
    "react-dom": "^16.10.1",
    "react-dropzone": "^10.2.1",
    "react-resize-detector": "^4.2.1",
    "react-select": "^3.0.5",
    "react-transition-group": "^4.3.0",
    "react-with-direction": "^1.3.1",
    "shortid": "^2.2.15"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,json}": [
      "yarn lint",
      "git add"
    ]
  }
}
